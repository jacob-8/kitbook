{
	"name": "svelte-pieces",
	"version": "1.0.1",
	"description": "Useful Svelte UI pieces for building web apps",
	"type": "module",
	"scripts": {
		"dev": "svelte-kit dev",
		"build": "svelte-kit build",
		"preview": "svelte-kit preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore  --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"package": "svelte-kit package",
		"release": "npm run package && cd package && npm publish",
		"postversion": "git push && git push --tags && npm run release",
		"svench-build": "svench build",
		"test": "jest",
		"vitebook:dev": "vitebook dev",
		"vitebook:build": "vitebook build",
		"vitebook:preview": "vitebook preview"
	},
	"devDependencies": {
		"@sveltejs/kit": "^1.0.0-next.260",
		"@sveltejs/vite-plugin-svelte": "^1.0.0-next.15",
		"@testing-library/jest-dom": "^5.16.2",
		"@testing-library/svelte": "^3.0.3",
		"@types/jest": "^27.4.0",
		"@types/recordrtc": "^5.6.8",
		"@types/youtube": "^0.0.46",
		"@typescript-eslint/eslint-plugin": "^4.19.0",
		"@typescript-eslint/parser": "^4.19.0",
		"@vitebook/client": "0.19.11",
		"@vitebook/core": "0.19.11",
		"@vitebook/markdown-shiki": "0.19.11",
		"@vitebook/markdown-svelte": "0.19.11",
		"@vitebook/theme-default": "0.19.11",
		"autoprefixer": "^10.4.2",
		"cssnano": "^5.0.16",
		"eslint": "^7.22.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-svelte3": "^3.4.0",
		"fast-xml-parser": "^3.19.0",
		"he": "^1.2.0",
		"jest": "^27.4.7",
		"postcss": "^8.4.6",
		"postcss-load-config": "^3.1.1",
		"prettier": "^2.5.1",
		"prettier-plugin-svelte": "^2.6.0",
		"recordrtc": "^5.6.2",
		"svelte": "^3.46.4",
		"svelte-check": "^2.4.2",
		"svelte-jester": "^2.3.1",
		"svelte-preprocess": "^4.10.2",
		"svelte2tsx": "^0.5.2",
		"svench": "^0.2.0-30",
		"tailwindcss": "^3.0.18",
		"ts-jest": "^27.1.3",
		"tslib": "^2.3.1",
		"typescript": "^4.0.0",
		"vite": "^2.7.13",
		"vitebook-addons": "^0.0.2",
		"yootils": "^0.3.1"
	},
	"peerDependencies": {
		"svelte": "^3.46.4",
		"tailwindcss": "^3.0.0",
		"typescript": "^4.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jacobbowdoin/svelte-pieces.git"
	},
	"keywords": [
		"Svelte",
		"SvelteKit",
		"Typescript",
		"UI"
	],
	"author": "Jacob Bowdoin",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/jacobbowdoin/svelte-pieces/issues"
	},
	"homepage": "https://github.com/jacobbowdoin/svelte-pieces#readme"
}
