{
  "name": "@kitbook/vite-plugin-kitbook",
  "version": "0.0.14",
  "description": "Vite plugin to turn a SvelteKit app into a Kitbook",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jacob-8/kitbook.git",
    "directory": "packages/vite-plugin-kitbook"
  },
  "bugs": {
    "url": "https://github.com/jacob-8/kitbook/issues"
  },
  "homepage": "https://kitbook.vercel.app",
  "license": "MIT",
  "author": "Jacob Bowdoin",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node stringify_import_virtual_modules.js && unbuild",
    "stub": "node stringify_import_virtual_modules.js && unbuild --stub",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "prepublishOnly": "vitest run && pnpm build"
  },
  "dependencies": {
    "@kitbook/mdsvex-shiki-twoslash": "^0.0.4",
    "@kitbook/rehype-display-link-titles": "^0.0.3",
    "mdsvex": "^0.11.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-slug": "^5.1.0",
    "rehype-urls": "^1.1.1"
  },
  "devDependencies": {
    "@sveltejs/kit": "1.24.1",
    "@types/node": "^18.15.3",
    "@vitest/ui": "^0.34.4",
    "svelte": "^4.2.0",
    "typescript": "^5.2.2",
    "unbuild": "^1.0.2",
    "vite": "^4.4.9",
    "vitest": "^0.34.4"
  }
}